<?xml version="1.0" encoding="UTF-8"?>

<?xml-model href="tei-msdesc.rnc" type="application/relax-ng-compact-syntax"?>
<msDesc xmlns="http://www.tei-c.org/ns/1.0"><!-- Description d'une source originale (manuscrit ou imprimé ancien) -->
    <msIdentifier>
        <country><!-- Pays --></country>
        <settlement><!-- Ville --></settlement>
        <institution><!-- institution conservatrice --></institution>
        <repository><!--Fonds de l'institution conservatrice--></repository>       
        <idno type="cote"><!-- Renseigner ici la cote de l'exemplaire --></idno>
    </msIdentifier>
    <msContents><summary><p><!-- facultativement, une description sommaire du contenu intellectuel --></p></summary>      
        <!-- ou bien un ou plusieurs ... -->
        <msItem > <!-- un ou plusieurs des suivants pour decrire l'item -->
            <locus from="debut" to="fin"><!-- location de cet item dans le ms -->  </locus>
          <title> <!-- un titre pour l'item --></title>
            <author><!-- l'auteur présumé --></author>
            <incipit><!-- mots initiales servant à indiquer le début d'un item --></incipit>
            <explicit><!-- mots finales servant à indiquer la fin d'un item --></explicit>
            <rubric><!-- mots indiquant un sous-titre, typiquement en rouge --></rubric>
        </msItem>
    </msContents>
    <physDesc>
        <!-- Description physique de la source -->
        <objectDesc>
            <supportDesc>
                <collation>
                    <p><!-- collation --></p>
                    <dimensions>
                        <dim type="format"><!-- format --></dim>
                    </dimensions>
                </collation>
                <condition><p><!-- Etat physique --></p></condition>
            </supportDesc>
        </objectDesc>
        <additions><p><!-- Ajouts, annotations marginales--></p></additions>
        <bindingDesc><binding><p><!--Description de reliure--></p></binding>
        </bindingDesc>
    </physDesc>
    <history><!-- historique de la source -->
        <provenance><p><!-- Information sur les possesseurs de l'exemplaire --></p></provenance>
    </history>
    <additional>
        <adminInfo>
            <recordHist><!-- Histoire de la notice bibliographique -->
                <source><!-- Sources bibliographiques de la présente notice -->
                    <listBibl>
                        <bibl>
                            <ref target="ajouter-ici-URL"><!-- Texte du lien --></ref>
                            <idno type="notice"><!-- notice --></idno>
                        </bibl>
                        
                    </listBibl>
                </source><!-- Historique des modifications de la notice (<sourceDesc> dans <teiHeader> -->
                <change><!-- Zone répétable autant de <change> que de lignes de modification --></change>
            </recordHist>
        </adminInfo>
        <surrogates>
            <!--reproductions numériques (ou autre) de la source-->
            <bibl>
                <!--lien vers une reproduction numérique de la source-->              
                    <ref target="ajouter-ici-URL"><!-- texte du lien --></ref>               
            </bibl></surrogates>
    </additional>
    <msPart><!-- Relié avec -->
        <altIdentifier>
            <idno type="cote"><!-- cote --></idno>
        </altIdentifier>
        <msContents>
            <p><!-- Description des documents reliés avec --></p>
        </msContents>        
    </msPart>
</msDesc>
